{
  parser: "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
  },
  "rules": {
    "no-console": 0,
    "react/no-unescaped-entities": 0,
    "no-extra-semi": 1,
    "object-curly-newline": [1, {
      "minProperties": 2,
    }],
    "object-curly-spacing": [1, "never"],
    "key-spacing": [1, {
      "afterColon": true,
      "beforeColon": false,
      "mode": "strict"
    }],
    "comma-spacing": [1, {
      "before": false,
      "after": true
    }],
    "no-trailing-spaces": 1,
    "semi": [1, "never"],
    "no-extra-parens": 1,
    "yoda": "error"
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
